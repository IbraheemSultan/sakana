@model sakanat.Models.Apartment

<h2>هل أنت متأكد من حذف الشقة؟</h2>

<div>
    <h4>العنوان: @Model.Address</h4>
    <h4>السعر: @Model.Price ج.م</h4>
    <h4>النوع: @(Model.GenderType == GenderType.Male ? "ولاد" : "بنات")</h4>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">تأكيد الحذف</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
