@model sakanat.Models.Apartment

@{
    ViewData["Title"] = "Edit Apartment";
}

<h2>Edit Apartment</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomCount"></label>
        <input asp-for="RoomCount" class="form-control" />
        <span asp-validation-for="RoomCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GenderType"></label>
        <select asp-for="GenderType" asp-items="Html.GetEnumSelectList<GenderType>()" class="form-control"></select>
    </div>

    <hr />
    <h4>Current Images</h4>
    @if (Model.Images != null && Model.Images.Any())
    {
        <div class="row">
            @foreach (var img in Model.Images)
            {
                <div class="col-md-3 text-center">
                    <img src="@img.ImageUrl" class="img-thumbnail" style="max-height:150px;" />
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="DeletedImageIds" value="@img.Id" id="deleteImg_@img.Id" />
                        <label class="form-check-label" for="deleteImg_@img.Id">Delete</label>
                    </div>
                </div>
            }
        </div>
    }

    <hr />
    <h4>Upload New Images</h4>
    <div class="form-group">
        <input type="file" name="NewImages" multiple class="form-control" />
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
